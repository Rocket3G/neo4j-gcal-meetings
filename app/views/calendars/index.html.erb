<% @calendars.each do |calendar| %>
  <div class='row'>
    <div class='col-md-offset-3 col-md-6'>
      <div class='panel panel-default calendar' data-colour='<%=calendar.background%>'>
        <div class='panel-body'>
          <p><%= calendar.description %></p>
        </div>
        <div class='panel-footer'>
          <p><%= link_to "View", calendar_path(calendar) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
